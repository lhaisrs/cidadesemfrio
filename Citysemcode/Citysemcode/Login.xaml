<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Citysemcode.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login" FontSize="25"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            <Label Text="Usuário"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            <Entry x:Name="Usuario"></Entry>
            <Label Text="Senha"
           FontSize="18"
           FontFamily="Arial"
           TextColor="#000000"
           VerticalOptions="Fill" 
           HorizontalOptions="Center" />
            <Entry x:Name="Senha"  IsPassword ="True"></Entry>
            <Button Text="Entrar"></Button>
            <Button Text="Cadastre-se"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>